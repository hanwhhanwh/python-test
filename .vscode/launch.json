{
	// IntelliSense를 사용하여 가능한 특성에 대해 알아보세요.
	// 기존 특성에 대한 설명을 보려면 가리킵니다.
	// 자세한 내용을 보려면 https://go.microsoft.com/fwlink/?linkid=830387을(를) 방문하세요.
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python: Current File",
			"type": "python",
			"request": "launch",
			"program": "${file}",
			"justMyCode": false,
			"console": "integratedTerminal",
			"cwd": "${fileDirname}"
		},
		{
			"name": "Python: Flask",
			"type": "python",
			"request": "launch",
			"module": "flask",
			"env": {
				"FLASK_APP": "${file}",
				"FLASK_ENV": "development",
				"FLASK_DEBUG": "1",
			},
			"args": [
				"run",
				"--no-debugger"
				, "--host=0.0.0.0"
				, "--port=80"
			],
			"jinja": true
		}
	]
}